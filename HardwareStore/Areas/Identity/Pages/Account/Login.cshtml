@page
@using System.Transactions
@model LoginModel

@{
    ViewData["Title"] = "Logowanie";
    Layout = "_UserLayout";
    ViewBag.DisableNavbar = true;
}

@Html.ActionLink("Strona główna", "Index", "Home", null, new { @class = "linkToIndex" })


<div class="inputForm">
    <h2>Zaloguj</h2>
    <section id="loginForm">
        <form id="account" method="post">

            <div asp-validation-summary="All" class="warningText"></div>

            <div class="inputGroup">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="textInput" />
                <span asp-validation-for="Input.Email" class="warningText"></span>
            </div>

            <div class="inputGroup">
                <label asp-for="Input.Password">Hasło</label>
                <input asp-for="Input.Password" class="textInput" />
                <span asp-validation-for="Input.Password" class="warningText"></span>
            </div>

            <div class="inputGroup">
                <div class="checkbox">
                    <input asp-for="Input.RememberMe" />
                    <label asp-for="Input.RememberMe">Zapamiętaj mnie</label>
                    @*@Html.DisplayNameFor(m => m.Input.RememberMe)*@
                </div>
            </div>

            <div class="inputGroup">
                <input type="submit" value="Zaloguj" class="btn" />
            </div>

            <a class="registerLink" asp-area="Identity" asp-page="/Account/Register">Rejestracja</a>
        </form>
    </section>
</div>





