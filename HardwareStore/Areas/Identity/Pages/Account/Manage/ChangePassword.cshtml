@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
    Layout = "_UserLayout";
}



<div class="settingsContent">
    
    @Html.Partial("_settingsMenu")

    <div class="settingPositions">
        <form id="change-password-form" method="post" class="inputFo2rm">
                <div asp-validation-summary="All" class="warningText"></div>
                <div class="inputGroup">
                    <label asp-for="Input.OldPassword">Stare hasło</label>
                    <input asp-for="Input.OldPassword" class="textInput" />
                    <span asp-validation-for="Input.OldPassword" class="warningText"></span>
                </div>
                <div class="inputGroup">
                    <label asp-for="Input.NewPassword">Nowe hasło</label>
                    <input asp-for="Input.NewPassword" class="textInput" />
                    <span asp-validation-for="Input.NewPassword" class="warningText"></span>
                </div>
                <div class="inputGroup">
                    <label asp-for="Input.ConfirmPassword">Powtórz hasło</label>
                    <input asp-for="Input.ConfirmPassword" class="textInput" />
                    <span asp-validation-for="Input.ConfirmPassword" class="warningText"></span>
                </div>

                <div class="inputGroup">
                    <button type="submit" class="btn savePassword">Zapisz hasło</button>
                </div>
            </form>
    </div>
</div>

