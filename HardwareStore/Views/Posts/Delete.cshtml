@model HardwareStore.Models.DbModels.Post

@{
    ViewData["Title"] = "Usuń";
}

<h1>Usuń</h1>

<h3>Czy jesteś pewien, że chcesz to usunąć?</h3>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Tytuł
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            Zawartość
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Content)
        </dd>
        <dt class="col-sm-2">
            Czy aktywny
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsActive)
        </dd>
        <dt class="col-sm-2">
            Data publikacji
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PublicationDate)
        </dd>
        <dt class="col-sm-2">
            Galeria
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Gallery.Name)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="PostId" />
        <input type="submit" value="Usuń" class="btn btn-danger" /> |
        <a asp-action="Index">Wróć</a>
    </form>
</div>
