@model HardwareStore.Models.DbModels.Brand

@{
    ViewData["Title"] = "Usuń " + Model.Name;
}

<h1>Usuń @Model.Name</h1>

<h3>Czy jesteś pewien, że chcesz to usunąć?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nazwa
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(d=>d.Name)
        </dd>
        <dt class="col-sm-2">
            Zdjęcie
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.Image.Url" style="max-width: 100px"/>
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="BrandId" />
        <input type="submit" value="Usuń" class="btn btn-danger" /> |
        <a asp-action="Index">Wróć</a>
    </form>
</div>
