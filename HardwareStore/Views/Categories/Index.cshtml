@model IEnumerable<HardwareStore.Models.DbModels.Category>

@{
    ViewData["Title"] = "Kategorie";
}

<h1>Kategorie</h1>

<p>
    <a asp-action="Create">Dodaj nową</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Nazwa
            </th>
            <th>
                Sekcja
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Section.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CategoryId">Edytuj</a> |
                <a asp-action="Delete" asp-route-id="@item.CategoryId">Usuń</a>
            </td>
        </tr>
}
    </tbody>
</table>
