@model HardwareStore.Models.DbModels.Category

@{
    ViewData["Title"] = "Usuń " + Model.Name;
}

<h1>Usuń sekcję @Model.Name</h1>

<h3>Czy jesteś pewien, że chcesz to usunąć?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nazwa kategorii
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Nazwa sekcji
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Section.Name)
        </dd class>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="CategoryId" />
        <input type="submit" value="Usuń" class="btn btn-danger" /> |
        <a asp-action="Index">Wróć</a>
    </form>
</div>
