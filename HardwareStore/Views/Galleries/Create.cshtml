@model HardwareStore.ViewModels.Galleries.CreateGalleryViewModel

@{
    ViewData["Title"] = "Utwórz nową galerię";
}

<h1>Utwórz nową galerię</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Gallery.Name" class="control-label">Nazwa</label>
                <input asp-for="Gallery.Name" class="form-control" />
                <span asp-validation-for="Gallery.Name" class="text-danger"></span>
            </div>
            @Html.HiddenFor(d => d.ProductId)
            <span asp-validation-for="ProductId" class="text-danger"></span>

            <div class="form-group">
                <input type="submit" value="Utwórz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Wróć do listy</a>
</div>

