@model IEnumerable<HardwareStore.Models.DbModels.Section>

@{
    ViewData["Title"] = "Sekcje";
}

<h1>Sekcje</h1>

<p>
    <a asp-action="Create">Dodaj nową</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Nazwa
            </th>
            <th>
                Ikona
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Icon)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SectionId">Edytuj</a> |
                <a asp-action="Delete" asp-route-id="@item.SectionId">Usuń</a>
            </td>
        </tr>
}
    </tbody>
</table>
