@model HardwareStore.Models.DbModels.Section

@{
    ViewData["Title"] = "Usuń";
}

<h1>Usuń</h1>
<h3>Czy jesteś pewien, że chcesz to usunąć?</h3>

<div>
    <h4>Section</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nazwa
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Ikona
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Icon)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="SectionId" />
        <input type="submit" value="Usuń" class="btn btn-danger" /> |
        <a asp-action="Index">Wróć</a>
    </form>
</div>
