@model IEnumerable<HardwareStore.Models.DbModels.Image>

@{
    ViewData["Title"] = "Zdjęcia";
}

<h1>Zdjęcia</h1>

<p>
    <a asp-action="Create">Dodaj nowe</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.Url)
            </th>*@  
            <th>
                Podgląd
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.Url)
            </td>*@
            <td>
                <img src="@item.Url", alt="@item.Name" style="width: 100px"/>
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ImageId">Edytuj</a> |
                <a asp-action="Details" asp-route-id="@item.ImageId">Szczegóły</a> |
                <a asp-action="Delete" asp-route-id="@item.ImageId">Usuń</a>
            </td>
        </tr>
}
    </tbody>
</table>
