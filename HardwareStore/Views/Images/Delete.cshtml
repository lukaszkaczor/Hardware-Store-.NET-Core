@model HardwareStore.Models.DbModels.Image

@{
    ViewData["Title"] = "Usuń zdjęcie";
}

<h1>Usuń zdjęcie @Model.Name</h1>

<h3>Czy jesteś pewien, że chcesz to usunąć?</h3>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nazwa
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Url)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Url)
        </dd>

        <dt class="col-sm-2">
            Podgląd
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.Url" style="max-width: 100px"/>
        </dd>

    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ImageId" />
        <input type="submit" value="Usuń" class="btn btn-danger" /> |
        <a asp-action="Index">Wróć</a>
    </form>
</div>
